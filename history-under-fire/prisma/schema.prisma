generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CulturalSite {
  id          String   @id @default(uuid())
  name        String
  description String
  location    String
  latitude    Float
  longitude   Float
  status      SiteStatus
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("cultural_sites")
}

enum SiteStatus {
  INTACT
  DAMAGED
  DESTROYED
}
